<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="Escenari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Principal" Height="229" Width="300">
    <StackPanel  VerticalAlignment="Center" PreviewTextInput="StackPanel_PreviewTextInput">
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
            <WrapPanel Margin="10">
                <Label Margin="5">Nº Files:</Label>
                <xctk:IntegerUpDown x:Name="txtFiles" Margin="5" Width="50" TextAlignment="Center" Maximum="10" Minimum="10" DefaultValue="10" DisplayDefaultValueOnEmptyText="True"/>
            </WrapPanel>
            <WrapPanel Margin="10">
                <Label Margin="5">Nº Columnes:</Label>
                <xctk:IntegerUpDown x:Name="txtColumnes" Margin="5" Width="50" TextAlignment="Center" Maximum="10" Minimum="10" DefaultValue="10" DisplayDefaultValueOnEmptyText="True" HorizontalContentAlignment="Right"/>
            </WrapPanel>
        </WrapPanel>
        <Button x:Name="btnInici" Margin="10" HorizontalAlignment="Center" Padding="5" Click="btnInici_Click">Comença</Button>
    </StackPanel>
</Window>
